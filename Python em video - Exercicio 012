def calcular_desconto():
    
    while True:
        try:

            valor_produto = float(input('Digite o valor do produto: R$'))
            break

        except ValueError:
            print('Digite o valor do produto de forma correta!')

    valor_desconto = (valor_produto*5) / 100
    valor_final = valor_produto - valor_desconto
    print(f'O novo valor do produto com 5% de desconto Ã©: R${valor_final}')
    
calcular_desconto()